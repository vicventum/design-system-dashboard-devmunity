{
  "name": "design-system-dashboard-devmunity",
  "version": "1.0.4",
  "main": "./nuxt.config.ts",
  "files": [
    "app",
    "public",
    "nuxt.config.ts"
  ],
  "type": "module",
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "commit": "cz",
    "prepare": "husky",
    "storybook": "STORYBOOK=true storybook dev -p 6006",
    "build-storybook": "nuxt prepare && STORYBOOK=true storybook build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/vicventum/design-system-dashboard-devmunity"
  },
  "release": {
    "branches": [
      "main",
      "next"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "CHANGELOG.md"
        }
      ],
      "@semantic-release/npm",
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json",
            "CHANGELOG.md"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  },
  "dependencies": {
    "@iconify-json/lucide": "^1.2.72",
    "@iconify-json/simple-icons": "^1.2.57",
    "@nuxt/ui": "4.1.0",
    "@tailwindcss/vite": "4.1.16",
    "nuxt": "^4.2.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "4.1.16"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "4.1.3",
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@nuxtjs/storybook": "9.0.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@storybook/experimental-addon-test": "8.6.8",
    "@storybook/vue3": "9.1.17",
    "@vitest/browser": "3.0.9",
    "@vitest/coverage-v8": "3.0.9",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^9.1.7",
    "prettier": "3.6.2",
    "prettier-plugin-tailwindcss": "0.7.1",
    "semantic-release": "^25.0.1",
    "storybook": "9.1.17",
    "@storybook/addon-docs": "9.1.17"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
